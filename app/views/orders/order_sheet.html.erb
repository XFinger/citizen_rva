<%  if @order.confirmed? %>
	Confirmed<br>
<%else%>
	Not Confirmed<br>
<%end%>

	<% if @order.delivery? %>
 		Delivery: 
 	<% else %>
 		Pick Up:
 	<% end %>
 	
