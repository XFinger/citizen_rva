
  
 <div id = 'background_plain' class = 'bold'>


<%=@user.username%>
<%=@user.id%>

<%= simple_form_for([:admin, @punchclock]) do |f| %>
  <%= f.error_notification %>
 
  <div class="form-inputs">
      <%= f.input :in  %>
       <%= f.input :out,:prompt => { :day => 'Select day', :month => 'Select month', :year => 'Select year' }   %>

    <%= f.hidden_field :user_name, :value =>  @user.username %>
 
    <%= f.hidden_field :user_id, :value => @user.id  %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

</div>