<h1>Listing photos</h1>

<table>
  <tr>
    <th>Gallery</th>
    <th>Caption</th>
    <th>Position</th>
    <th>Image</th>
    <th>Name</th>
    <th>Remote image url</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @photos.each do |photo| %>
  <tr>
    <td><%= photo.gallery_id %></td>
    <td><%= photo.caption %></td>
    <td><%= photo.position %></td>
    <td><%= photo.image %></td>
    <td><%= photo.name %></td>
    <td><%= photo.remote_image_url %></td>
    <td><%= link_to 'Show', photo %></td>
    <td><%= link_to 'Edit', edit_photo_path(photo) %></td>
    <td><%= link_to 'Destroy', photo, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

