<%= simple_form_for(@salad) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :sal_name %>
    <%= f.input :sal_description %>
    <%= f.input :useable_id %>
    <%= f.input :useable_type %>
    <%= f.input :sal_price %>
    <%= f.input :sal_count %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
