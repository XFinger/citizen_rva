<h1>Listing addresses</h1>

<table>
  <tr>
    <th>User</th>
    <th>Street</th>
    <th>City</th>
    <th>State</th>
    <th>Zip</th>
    <th>Lat</th>
    <th>Lng</th>
    <th>Is default</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @addresses.each do |address| %>
  <tr>
    <td><%= address.user_id %></td>
    <td><%= address.street %></td>
    <td><%= address.city %></td>
    <td><%= address.state %></td>
    <td><%= address.zip %></td>
    <td><%= address.lat %></td>
    <td><%= address.lng %></td>
    <td><%= address.is_default %></td>
    <td><%= link_to 'Show', address %></td>
    <td><%= link_to 'Edit', edit_address_path(address) %></td>
    <td><%= link_to 'Destroy', address, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

