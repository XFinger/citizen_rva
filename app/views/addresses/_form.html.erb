<%= simple_form_for(@address) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :user_id %>
    <%= f.input :street %>
    <%= f.input :city %>
    <%= f.input :state %>
    <%= f.input :zip %>
    <%= f.input :lat %>
    <%= f.input :lng %>
    <%= f.input :is_default %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
