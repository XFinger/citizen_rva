<%= simple_form_for(@drink) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :d_name %>
    <%= f.input :useable_id %>
    <%= f.input :useable_type %>
    <%= f.input :d_price %>
    <%= f.input :d_count %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
