<%= simple_form_for(@side) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :s_name %>
    <%= f.input :s_description %>
    <%= f.input :useable_id %>
    <%= f.input :useable_type %>
    <%= f.input :s_price %>
    <%= f.input :s_count %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
