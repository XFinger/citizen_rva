<%= simple_form_for(@punchclock), :url => { :action => "update" } do|f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.hidden_field :user_name, :value =>  @user.username %>
    <%= f.hidden_field :payperiod, :value => @counter %>
    <%= f.hidden_field :out, :value => Time.now %>

